{
  "name": "${localWorkspaceFolderBasename} Dev Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  // Initialize command runs on host BEFORE container build
  "initializeCommand": "bash ${localWorkspaceFolder}/.devcontainer/init.sh",
  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh"
          }
        },
        "editor.formatOnSave": true,
        "files.eol": "\n",
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true
      },
      "extensions": [
        "usernamehw.errorlens", // Affichage inline des erreurs et warnings
        "vscode-icons-team.vscode-icons", // IcÃ´nes pour les fichiers et dossiers
        "redhat.vscode-yaml", // Support YAML
        "tamasfe.even-better-toml", // Support TOML
        "editorconfig.editorconfig", // EditorConfig
        "visualstudioexptteam.vscodeintellicode" // IntelliCode gratuit de Microsoft
      ]
    }
  },
  // Post-start command
  "postStartCommand": "chmod +x /workspace/.devcontainer/*.sh 2>/dev/null || true && /workspace/.devcontainer/setup-mcp.sh && echo 'ðŸš€ DevContainer ready!'",
  // Forward ports
  "forwardPorts": [],
  // Run as user
  "remoteUser": "vscode",
  // Shutdown action
  "shutdownAction": "none"
}
