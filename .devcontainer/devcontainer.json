{
  "name": "${localWorkspaceFolderBasename} Dev Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  // Initialize command runs on host BEFORE container build
  "initializeCommand": "bash ${localWorkspaceFolder}/.devcontainer/init.sh",
  // Features
  "features": {
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.25"
    }
  },
  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh"
          }
        },
        "editor.formatOnSave": true,
        "files.eol": "\n",
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true,
        "[go]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        },
        "go.toolsManagement.autoUpdate": true,
        "go.lintTool": "golangci-lint",
        "go.lintOnSave": "package",
        "bazel.buildifierExecutable": "/home/vscode/.local/bin/buildifier",
        "bazel.enableCodeLens": true
      },
      "extensions": [
        "usernamehw.errorlens", // Affichage inline des erreurs et warnings
        "vscode-icons-team.vscode-icons", // IcÃ´nes pour les fichiers et dossiers
        "redhat.vscode-yaml", // Support YAML
        "tamasfe.even-better-toml", // Support TOML
        "visualstudioexptteam.vscodeintellicode", // IntelliCode gratuit de Microsoft
        "golang.go", // Support Go officiel
        "hashicorp.terraform", // Support Terraform
        "bazelbuild.vscode-bazel" // Support Bazel
      ]
    }
  },
  // Post-start command
  "postStartCommand": "chmod +x /workspace/.devcontainer/*.sh 2>/dev/null || true && /workspace/.devcontainer/setup-mcp.sh && echo 'ðŸš€ DevContainer ready!'",
  // Forward ports
  "forwardPorts": [],
  // Run as user
  "remoteUser": "vscode",
  // Shutdown action
  "shutdownAction": "none"
}
